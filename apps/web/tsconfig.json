{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }]
  },
  "baseUrl": ".",
  "paths": {
    "@components/*": ["app/components/*"],
    "@lib/*": ["lib/*"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/types/*"
  ],
  "exclude": ["node_modules"]
}
